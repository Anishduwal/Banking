@{
}
<div class="pcoded-wrapper">
    <div class="pcoded-content">
        <div class="pcoded-inner-content">
            <form action="@Url.Action("AddAccount", "Home")" method="post" enctype="multipart/form-data">
                <ul>
                    @if (ViewBag.Error is not null)
                    {
                        @foreach (var error in ViewBag.Error)
                        {
                            <li class="text-danger">@error</li>
                        }
                    }
                </ul>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <label for="AccountHolder">Account Holder Name <span style="color:firebrick">*</span></label>
                        <input asp-for="AccountHolder" type="text" class="form-control">
                        <span asp-validation-for="AccountHolder" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6 mb-3">
                        <label for="AccountNumber">Account Number <span style="color:firebrick">*</span></label>
                        <input asp-for="AccountNumber" value="" autocomplete="FullAddress" type="text" class="form-control">
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6 mb-3">
                        <label for="Email">Email <span style="color:firebrick">*</span></label>
                        <input asp-for="Email" type="email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6 mb-3 ">
                        <label for="MobileNo">Phone Number</label>
                        <div class="input-group">
                            <div class="input-group-append">

                                <select class="form-select" aria-label="form-select-md example" disabled><option>+977</option></select>
                            </div>
                            <input asp-for="PhoneNumber" type="tel" class="form-control">

                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-sm btn-primary">Add Organization</button>
                </div>
            </form>
        </div>
    </div>
</div>
