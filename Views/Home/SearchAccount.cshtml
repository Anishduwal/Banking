@{
}
<div class="pcoded-wrapper">
    <div class="pcoded-content">
        <div class="pcoded-inner-content">
            <form action="@Url.Action("SearchAccount", "Home")" method="post" enctype="multipart/form-data">
                <ul>
                    @if (ViewBag.Error is not null)
                    {
                        @foreach (var error in ViewBag.Error)
                        {
                            <span class="text-danger">@error</span>
                        }
                    }
                </ul>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <label for="AccountNumber">Account Number<span style="color:firebrick">*</span></label>
                        <input asp-for="AccountNumber" type="text" class="form-control">
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <button type="submit" class="btn btn-sm btn-primary">Search Account</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>